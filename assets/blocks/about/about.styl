.about
	background-color #fafafa
	padding 70px 0
	
	&__inner
		max-width 1176px
		padding 0 20px
		box-sizing border-box
		margin 0 auto
		width 100%
		
	&__title
		text-align center
		margin-bottom 70px
		
	&__items
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-wrap wrap
		margin-left -30px
		
	&__elem
		flex 0 0 50%
		width 50%
		padding-left 30px
		box-sizing border-box
		
	&__item
		
		&--img
			font-size 0
			line-height 0
			
			img
				max-width 100%
			
		&--text
			color #444444
			font-size 16px
			font-weight 300
			line-height 24px
			letter-spacing 0.32px
			
	&__author
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
		margin 15px 0 0 97px
		
	&__author-img
		flex 0 0 73px
		width 73px
		margin-right: 25px
		font-size: 0
		line-height 0
		
		img
			width 73px
			height 73px
			border-radius: 50%
		
	&__author-text
		color #444444
		font-size 16px
		font-weight 300
		line-height 24px
		letter-spacing 0.32px
		
	&__author-name
		text-transform uppercase
		
@media all and (max-width: 980px)
	.about
		
		&__elem
			flex 0 0 100%
			width 100%
			
		&__item
			
			&--img
				text-align center
				margin-bottom 20px
				
		&__author
			margin-left 0
			justify-content flex-end