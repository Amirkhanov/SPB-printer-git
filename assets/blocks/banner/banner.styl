.banner
	
	&__inner
		position relative
		
	&__img
		font-size: 0
		line-height 0
		
		img
			width 100%
			
	&__content
		position absolute
		left 50%
		top 50%
		transform translate(-50%,-50%)
		text-align center
		
	&__title
		color #ffffff
		font-family com
		font-size 32px
		font-weight bold
		text-transform uppercase
		letter-spacing 0.64px
		white-space nowrap
		margin-bottom 45px
		
		
	&__text
		color #ffffff
		font-size 24px
		font-weight 400
		line-height 48px
		letter-spacing 0.48px
		margin-bottom 80px
		
	&__button
		button
			max-width 231px
			width 100%
			border none
			height 48px
			border-radius 7px
			background-color #ffd33b
			color #ffffff
			font-size 18px
			font-weight 700
			text-transform uppercase
			letter-spacing 1.44px
			
@media all and (max-width: 980px)
	.banner
		&__title
			margin-bottom 10px
			font-size 25px
			
		&__text
			margin-bottom 20px
			font-size 18px
			line-height 1.4
			
@media all and (max-width: 640px)
	.banner
		&__title
			margin-bottom 10px
			font-size 20px
			white-space normal
			line-height 1.2
			
		&__text
			margin-bottom 20px
			font-size 14px
			
@media all and (max-width: 480px)
	.banner
		&__content
			left 10px
			right 10px
			top 20px
			bottom 10px
			transform translate(0,0)
			
@media all and (max-width: 400px)
	.banner
		&__img
			img
				height 250px