.delivery
	background-color #fafafa
	padding 70px 0 104px
	box-sizing border-box
	
	&__inner
		text-align center
		
	&__title
		margin-bottom 15px
	
	&__text
		color #444444
		font-size 18px
		line-height 24px
		letter-spacing 0.36px
		max-width 630px
		width 100%
		margin 0 auto 70px
		
	&__map
		margin-bottom 37px
		
	&__map-block
		width 100%
		height 625px
	
	&__items-wrap
		max-width 1170px
		margin 0 auto
		width 100%
	
	&__items
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-wrap wrap
		margin-left -32px
		
	&__elem
		flex 0 0 33.33%
		width 33.33%
		max-width 33.33%
		padding 0 0 20px 32px
		box-sizing border-box
		
	&__item
		box-shadow 0 0 1px 1px #7fd1d2
		border-radius 5px
		background-color #ffffff
		height 100%
		padding 55px 22px 0
		box-sizing border-box
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		
	&__item-img
		font-size: 0
		line-height 0
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content center
		align-items center
		margin-bottom 48px
		height 112px
		
	&__item-title
		margin-bottom 8px
		
	&__item-text
		color #444444
		font-size 18px
		line-height 24px
		font-weight 300
		letter-spacing 0.36px
		margin-bottom auto
		
	&__item-time
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
		justify-content center
		padding-top 20px
		margin-bottom 20px
		
	&__item-time-icon
		font-size 0
		line-height 0
		margin-right 13px
		flex 0 0 35px
		width 35px
		
	&__item-time-text
		color #444444
		font-size 18px
		line-height 24px
		letter-spacing 0.36px
	
	&__item-button
		margin 0 -20px
		height 72px
		background-color: #7fd1d2
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		justify-content center
		align-items center
		color #ffffff
		font-size 24px
		line-height 24px
		text-transform uppercase
		letter-spacing 0.48px
		border-radius: 0 0 5px 5px
		
@media all and (max-width: 1180px)
	.delivery
		&__inner
			padding 0 20px
			box-sizing border-box
			
		&__map-block
			height 425px
			
		&__map
			margin-left -20px
			margin-right -20px
			
@media all and (max-width: 900px)
	.delivery
		&__elem
			flex 0 0 50%
			width 50%
			max-width 50%
			
@media all and (max-width: 640px)
	.delivery
		&__elem
			flex 0 0 100%
			width 100%
			max-width 100%
			
		&__map-block
			height 325px