.gallery-text-block
    max-width 1200px
    margin 0 auto 20px
    width 100%
    box-sizing border-box
    flex none
    
    &__inner
        font-weight bold
        font-size 0
        color #444444
        
    &__title
        font-size 24px
        line-height 1
        margin-bottom 26px
        min-height 50px
        text-align center
        
    &__body
        font-size 16px
        line-height 1.4
    
    &__right-block,
    &__left-block 
        display inline-block
        vertical-align top
        width 50%
        padding 0 15px
        box-sizing border-box
        
    &__btn-wr
        margin-top 20px
        text-align center
        
        .green-btn
            display inline-block
            border-radius 7px
            font-size 18px
            line-height 1
            font-weight bold
            text-transform uppercase
            letter-spacing 1.44px
            padding 15px 22px
            
    @media all and (max-width: 1280px)
        margin 0 40px
        width auto
    @media all and (max-width: 960px)
        margin 0 10px
        &__right-block,
        &__left-block
            width 100%
            margin 0 0 20px
            
        &__title
            min-height 0